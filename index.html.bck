        function sendMessage() {
            const messageText = messageInput.value.trim();
            
            if (messageText && ws && ws.readyState === WebSocket.OPEN) {
                // Add message to chat
                addMessageToChat(messageText, 'user');
                
                // Send message via WebSocket
                ws.send(JSON.stringify({
                    type: 'query',
                    content: messageText
                }));
                
                // Clear input
                messageInput.value = '';
                
                // Show typing indicator
                showTypingIndicator();
            }
        }
        
        function addMessageToChat(message, sender) {
            // Remove typing indicator if present
            const typingIndicator = document.getElementById('typing-indicator');
            if (typingIndicator) {
                typingIndicator.remove();
            }
            
            // Remove initial placeholder if it exists
            const placeholder = chatMessages.querySelector('.text-center');
            if (placeholder) {
                placeholder.remove();
            }
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `fade-in ${sender === 'user' ? 'flex justify-end' : 'flex justify-start'}`;
            
            // Check if the message is a structured response
            const structuredDisplay = displayStructuredResponse(message);
            
            if (structuredDisplay) {
                messageDiv.innerHTML = structuredDisplay;
            } else {
                // Regular message
                if (sender === 'user') {
                    messageDiv.innerHTML = `
                        <div class="message-bubble user-message">
                            <div>${escapeHtml(message)}</div>
                            <div class="text-xs opacity-75 mt-1 text-right">${formatTime(new Date())}</div>
                        </div>
                    `;
                } else {
                    messageDiv.innerHTML = `
                        <div class="message-bubble bot-message">
                            <div>${escapeHtml(message)}</div>
                            <div class="text-xs opacity-75 mt-1">${formatTime(new Date())}</div>
                        </div>
                    `;
                }
            }
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            
            // Save to conversation history
            saveMessageToHistory(message, sender);
        }
        
        function displayStructuredResponse(response) {
            try {
                // Try to parse as JSON
                const structuredData = typeof response === 'string' ? JSON.parse(response) : response;
                
                // Check if it's a structured gazette response
                if (structuredData.Gazette_Notice_ID) {
                    return `
                        <div class="message-bubble bot-message">
                            <div class="structured-response gazette-notice">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="text-lg font-semibold text-blue-800">${structuredData.Gazette_Notice_ID}</h3>
                                    <span class="text-sm text-gray-500">Page: ${structuredData.Exact_Location_Page || 'N/A'}</span>
                                </div>
                                <p class="text-gray-700 mb-3">${structuredData.Summary}</p>
                                
                                ${structuredData.Appointed_Entities && structuredData.Appointed_Entities.length > 0 ? `
                                    <div class="mt-3">
                                        <h4 class="font-medium text-gray-800 mb-2">Appointed Entities:</h4>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                            ${structuredData.Appointed_Entities.map(entity => `
                                                <div class="bg-white p-2 rounded border">
                                                    <div class="font-medium text-sm">${entity.Name}</div>
                                                    <div class="text-xs text-gray-600">${entity.Role}</div>
                                                </div>
                                            `).join('')}
                                        </div>
                                    </div>
                                ` : ''}
                                
                                ${structuredData.Key_Details && structuredData.Key_Details.length > 0 ? `
                                    <div class="mt-3">
                                        <h4 class="font-medium text-gray-800 mb-2">Key Details:</h4>
                                        <div class="space-y-1">
                                            ${structuredData.Key_Details.map(detail => `
                                                <div class="flex">
                                                    <div class="font-medium text-sm w-24">${detail.Category}:</div>
                                                    <div class="text-sm">${detail.Value}</div>
                                                </div>
                                            `).join('')}
                                        </div>
                                    </div>
                                ` : ''}
                            </div>
                            <div class="text-xs opacity-75 mt-1">${formatTime(new Date())}</div>
                        </div>
                    `;
                }
                
                // Check if it's an entity search response
                if (structuredData.results && Array.isArray(structuredData.results)) {
                    return `
                        <div class="message-bubble bot-message">
                            <div class="structured-response entity-result">
                                <h3 class="text-lg font-semibold mb-3">Entity Search Results</h3>
                                <div class="space-y-3">
                                    ${structuredData.results.map(result => `
                                        <div class="bg-white p-3 rounded border">
                                            <div class="flex justify-between items-start mb-2">
                                                <h4 class="font-medium">${result.metadata.document_name || 'Unknown Document'}</h4>
                                                <span class="relevance-badge">
                                                    ${Math.round((result.relevance_score || 0) * 100)}% match
                                                </span>
                                            </div>
                                            <p class="text-sm text-gray-700">${result.text.substring(0, 200)}${result.text.length > 200 ? '...' : ''}</p>
                                            <div class="mt-2 flex justify-end">
                                                <button class="text-xs text-blue-600 hover:text-blue-800 view-result" data-id="${result.metadata.id}">
                                                    <i class="bi bi-eye mr-1"></i>View
                                                </button>
                                            </div>
                                        </div>
                                    `).join('')}
                                </div>
                            </div>
                            <div class="text-xs opacity-75 mt-1">${formatTime(new Date())}</div>
                        </div>
                    `;
                }
                
                // If not a recognized structured format, return null
                return null;
            } catch (e) {
                console.error('Error parsing structured response:', e);
                return null;
            }
        }
        
