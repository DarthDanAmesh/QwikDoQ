        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.host}/ws`;
            
            ws = new WebSocket(wsUrl);
            
            ws.onopen = function() {
                console.log('WebSocket connection established');
                connectionStatus.className = 'w-2 h-2 rounded-full bg-green-500';
                reconnectAttempts = 0;
                
                // Request initial status
                ws.send(JSON.stringify({
                    type: 'status_request'
                }));
            };
            
            ws.onmessage = function(event) {
                try {
                    const data = JSON.parse(event.data);
                    handleWebSocketMessage(data);
                } catch (error) {
                    console.error('Error parsing WebSocket message:', error);
                    // If it's not JSON, display it as a plain message
                    if (event.data && event.data.trim()) {
                        addMessageToChat(event.data, 'bot');
                    }
                }
            };
            
            ws.onclose = function() {
                console.log('WebSocket connection closed');
                connectionStatus.className = 'w-2 h-2 rounded-full bg-red-500';
                
                // Attempt to reconnect after a delay
                if (reconnectAttempts < maxReconnectAttempts) {
                    reconnectAttempts++;
                    console.log(`Attempting to reconnect... (${reconnectAttempts}/${maxReconnectAttempts})`);
                    setTimeout(connectWebSocket, 3000 * reconnectAttempts);
                } else {
                    showNotification('Connection lost. Please refresh the page.', 'error');
                }
            };
            
            ws.onerror = function(error) {
                console.error('WebSocket error:', error);
                showNotification('Connection error occurred', 'error');
            };
        }
        
        function handleWebSocketMessage(data) {
            switch(data.type) {
                case 'response':
                    addMessageToChat(data.content, 'bot');
                    break;
                    
                case 'status':
                    updateStatusUI(data.data);
                    break;
                    
                case 'indexing_complete':
                    showNotification(`Indexing complete: ${data.documents_indexed} documents from ${data.filename}`, 'success');
                    // Refresh status
                    ws.send(JSON.stringify({
                        type: 'status_request'
                    }));
                    break;
                    
                case 'error':
                    showNotification(`Error: ${data.message}`, 'error');
                    break;
                    
                default:
                    console.log('Unknown message type:', data.type);
            }
        }
        
        function updateStatusUI(statusData) {
            if (statusData.is_indexing) {
                statusIndicator.classList.remove('hidden');
                document.getElementById('loading-message').textContent = statusData.status_message;
                
                if (!loadingOverlay.classList.contains('hidden')) {
                    loadingOverlay.classList.remove('hidden');
                }
            } else {
                statusIndicator.classList.add('hidden');
                loadingOverlay.classList.add('hidden');
                
                if (statusData.error) {
                    showNotification(`Indexing error: ${statusData.error}`, 'error');
                }
            }
        }
        
        function handleFileUpload(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            currentFile = file;
            
            // Show loading overlay
            loadingOverlay.classList.remove('hidden');
            
            // Update UI
            document.getElementById('document-title').textContent = file.name;
            document.getElementById('document-content').innerHTML = `
                <div class="text-center py-16">
                    <div class="animate-spin rounded-full h-12 w-12 border-4 border-indigo-500 border-t-transparent mx-auto mb-4"></div>
                    <h3 class="text-lg font-medium text-gray-700">Processing ${file.name}</h3>
                    <p class="text-gray-500 mt-2">Analyzing document content...</p>
                </div>
            `;
            
            // Upload file
            const formData = new FormData();
            formData.append('file', file);
            
            fetch('/upload/', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(result => {
                console.log('Upload response:', result);
                
                if (result.status === 'success' || result.status === 'processing') {
                    showNotification('File uploaded successfully', 'success');
                    
                    // Add to documents list
                    addDocumentToList(file.name, result.pages_extracted || 1);
                    
                    // Load the document content
                    fetch(`/document-content/${encodeURIComponent(file.name)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            console.error('Error loading document content:', data.error);
                            showNotification(`Error loading document: ${data.error}`, 'error');
                            loadingOverlay.classList.add('hidden');
                            return;
                        }
                        
                        displayDocumentContent(data.content, file.name);
                    })
                    .catch(error => {
                        console.error('Error fetching document content:', error);
                        showNotification('Error loading document content', 'error');
                        loadingOverlay.classList.add('hidden');
                    });
                } else {
                    showNotification(`Upload failed: ${result.message}`, 'error');
                    loadingOverlay.classList.add('hidden');
                }
            })
            .catch(error => {
                console.error('Upload failed:', error);
                showNotification('File upload failed', 'error');
                loadingOverlay.classList.add('hidden');
            });
        }

